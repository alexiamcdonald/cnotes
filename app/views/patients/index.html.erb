<p id="notice"><%= notice %></p>

<h1>Listing Patients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Prefname</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Maritalstat</th>
      <th>Address</th>
      <th>Suburb</th>
      <th>Postcode</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Emergencyname</th>
      <th>Emergencyphone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.prefname %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.maritalstat %></td>
        <td><%= patient.address %></td>
        <td><%= patient.suburb %></td>
        <td><%= patient.postcode %></td>
        <td><%= patient.email %></td>
        <td><%= patient.phone %></td>
        <td><%= patient.emergencyname %></td>
        <td><%= patient.emergencyphone %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

