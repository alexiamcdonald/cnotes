<p id="notice"><%= notice %></p>

<h1>Listing Notes</h1>

<table>
  <thead>
    <tr>
      <th>Timestamp</th>
      <th>Tag</th>
      <th>Notes</th>
      <th>Assessment</th>
      <th>Picture</th>
      <th>Followup</th>
      <th>Nextappointment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.timestamp %></td>
        <td><%= note.tag %></td>
        <td><%= note.notes %></td>
        <td><%= note.assessment %></td>
        <td><%= note.picture %></td>
        <td><%= note.followup %></td>
        <td><%= note.nextappointment %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

